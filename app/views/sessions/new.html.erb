<% provide(:title, "Sign in") %>

<h1>Sign in</h1>

<%= form_for :session, url: sessions_path, :html => {:class => "form-horizontal"} do |f| %>

  <div class="form-group">
    <%= f.label :email, class: "col-lg-3 control-label", for: "inputEmail" %>

    <div class="col-lg-6">
      <%= f.text_field :email, class: "form-control", id: "inputEmail" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-lg-3 control-label", for: "inputPassword" %>

    <div class="col-lg-6">
      <%= f.password_field :password, class: "form-control", id: "inputPassword" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-3 col-lg-6">
      <%= f.submit 'Sign in', class: "btn btn-primary" %>
      <%= link_to "cancel", root_path, class: "btn btn-default" %>
    </div>
  </div>

<% end %>

<div class="col-lg-offset-3 col-lg-6">
  <p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>
