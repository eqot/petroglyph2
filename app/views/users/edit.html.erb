<% provide(:title, "Edit user") %>

<h1>Update your profile</h1>

<%= form_for @user, :html => {:class => "form-horizontal"} do |f| %>

  <div class="form-group">
    <%= f.label :name, class: "col-lg-3 control-label", for: "inputName" %>

    <div class="col-lg-6">
      <%= f.text_field :name, class: "form-control", id: "inputName" %>
    </div>

    <% if @user.errors.any? %>
      <p class="help-block">
        <p class="text-danger">
          <%= @user.errors.messages[:name][0] %>
        </p>
      </p>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-lg-3 control-label", for: "inputEmail" %>

    <div class="col-lg-6">
      <%= f.text_field :email, class: "form-control", id: "inputEmail" %>
    </div>

    <% if @user.errors.any? %>
      <p class="help-block">
        <p class="text-danger">
          <%= @user.errors.messages[:email][0] %>
        </p>
      </p>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-lg-3 control-label", for: "inputPassword" %>

    <div class="col-lg-6">
      <%= f.password_field :password, class: "form-control", id: "inputPassword" %>
    </div>

    <% if @user.errors.any? %>
      <p class="help-block">
        <p class="text-danger">
          <%= @user.errors.messages[:password][0] %>
        </p>
      </p>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm Password", class: "col-lg-3 control-label", for: "inputConfirmation" %>

    <div class="col-lg-6">
      <%= f.password_field :password_confirmation, class: "form-control", id: "inputConfirmation" %>
    </div>

    <% if @user.errors.any? %>
      <p class="help-block">
        <p class="text-danger">
          <%= @user.errors.messages[:password_confirmation][0] %>
        </p>
      </p>
    <% end %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-3 col-lg-6">
      <%= f.submit "Save changes", class: "btn btn-primary" %>
      <%= link_to "cancel", root_path, class: "btn btn-default" %>
    </div>
  </div>

<% end %>

<div class="col-lg-offset-3 col-lg-6">
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails">change</a>
</div>
