 <div class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "petroglyph", root_path, class: "navbar-brand", id: "logo" %></li>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to "Home", root_path %></li>
        <li><%= link_to "About", about_path %></li>
      </ul>
      <form class="navbar-form navbar-right">
        <% if signed_in? %>

          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %>
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li role="presentation"><%= link_to "Profile", current_user %></li>
              <li role="presentation"><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li role="presentation"><%= link_to "Users", users_path %></li>
              <li role="presentation" class="divider"></li>
              <li role="presentation"><%= link_to "Sign out", signout_path, method: "delete" %></li>
            </ul>
          </div>

        <% else %>
          <%= link_to "Sign in", signin_path, class: "btn btn-success" %>
        <% end %>
      </form>
    </div>
  </div>
</div>
